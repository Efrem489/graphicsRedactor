<Window x:Class="VectorEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VectorEditor"
        mc:Ignorable="d"
        Title="Графический редактор" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Tools Panel -->
        <StackPanel Grid.Column="0" Margin="10">
            <Button Content="Создание линии" Click="CreateLineButton_Click" Margin="0,0,0,10"/>
            <Button Content="Удалить выбранное" Click="DeleteSelectedButton_Click" Margin="0,0,0,10"/>
            <Button Content="Сохранить файл" Click="SaveButton_Click" Margin="0,0,0,10"/>
            <Button Content="Загрузить файл" Click="LoadButton_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Толщина:" Margin="0,10,0,5"/>
            <Slider x:Name="thicknessSlider" Minimum="1" Maximum="10" Value="1" ValueChanged="ThicknessSlider_ValueChanged"/>

            <TextBlock Text="Цвет:" Margin="0,10,0,5"/>
            <ComboBox x:Name="colorComboBox" SelectionChanged="ColorComboBox_SelectionChanged">
                <ComboBoxItem Content="Черный" Tag="#FF000000"/>
                <ComboBoxItem Content="Красный" Tag="#FFFF0000"/>
                <ComboBoxItem Content="Зеленый" Tag="#FF008000"/>
                <ComboBoxItem Content="Синий" Tag="#FF0000FF"/>
            </ComboBox>
        </StackPanel>

        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="2" Margin="10" Background="White">
            <Border ClipToBounds="True">
                <Canvas x:Name="drawingCanvas" 
                        Background="Transparent"
                        MouseLeftButtonDown="DrawingCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="DrawingCanvas_MouseLeftButtonUp"
                        MouseMove="DrawingCanvas_MouseMove"/>
            </Border>
        </Border>
    </Grid>
</Window>
